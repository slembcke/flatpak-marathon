{
    "name": "SDL2",
    "rm-configure": true,
    "config-opts": ["--disable-static"],
    "cleanup": [
        "/bin",
        "/share/man",
        "/share/aclocal",
        "/include",
        "/lib/pkgconfig",
        "/lib/*.la",
        "/lib/*.a"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/libsdl-org/SDL/archive/refs/tags/release-2.24.2.tar.gz",
            "sha256": "be08ca66d11b1743996cb69a9b6c44771e16084a2dbcb4b61e52d9ac4983f4fc"
        },
        {
            "type": "script",
            "dest-filename": "autogen.sh",
            "commands": [
                "sed -i -e 's/.*AM_PATH_ESD.*//' configure.in",
                "cp -p /usr/share/automake-*/config.{sub,guess} build-scripts",
                "aclocal",
                "libtoolize",
                "autoconf"
            ]
        }
    ]
}
